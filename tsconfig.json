{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": ["commitlint.config.js", "node_modules", "dist", "**/*.js"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
